---
interface Props {
  label: string;
  variant?: 'solid' | 'ghost';
}

const { label, variant = 'ghost' } = Astro.props;
const base =
  'inline-flex items-center rounded-full px-3 py-1 text-[11px] font-semibold uppercase tracking-[0.4em] transition-all duration-300';
const style =
  variant === 'solid'
    ? 'bg-gradient-to-r from-etherium/80 via-nebula/80 to-[var(--brass)] text-cosmic shadow-glow'
    : 'border border-white/15 bg-surface/10 text-[var(--muted)] hover:border-[var(--brass)] hover:text-[var(--brass)]';
---
<span class={`${base} ${style}`}>{label}</span>
