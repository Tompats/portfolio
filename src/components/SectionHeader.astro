---
interface Props {
  title: string;
  subtitle?: string;
  align?: 'left' | 'center';
}

const { title, subtitle, align = 'left' } = Astro.props;
---
<div class={`mb-10 ${align === 'center' ? 'text-center' : 'text-left'}`} data-animate>
  <div class={`flex items-center gap-3 ${align === 'center' ? 'justify-center' : ''}`}>
    <span class="grid h-10 w-10 place-items-center rounded-full border border-[var(--border-strong)] text-[var(--brass)]">
      <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.3">
        <circle cx="12" cy="12" r="8" opacity="0.5"></circle>
        <path d="M12 6v4l3 2" stroke-linecap="round" stroke-linejoin="round"></path>
      </svg>
    </span>
    {subtitle && <p class="text-xs uppercase tracking-[0.5em] text-[var(--muted)]">{subtitle}</p>}
  </div>
  <h2 class={`mt-4 text-3xl font-semibold text-[var(--text)] md:text-4xl ${align === 'center' ? 'mx-auto max-w-3xl' : ''}`}>
    <span class="bg-gradient-to-r from-[var(--accent)] via-[var(--accent-secondary)] to-[var(--brass)] bg-clip-text text-transparent">
      {title}
    </span>
  </h2>
</div>
