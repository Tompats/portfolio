<button
  data-theme-toggle
  class="theme-toggle relative flex h-11 w-11 items-center justify-center rounded-2xl border border-[var(--border)] text-[var(--text)]"
  aria-label="Toggle color theme"
  type="button"
  tabindex="0"
>
  <span class="theme-toggle__glow" aria-hidden="true"></span>
  <span class="theme-toggle__icon theme-toggle__icon--sun" aria-hidden="true">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-[19px] w-[19px]">
      <circle cx="12" cy="12" r="5" />
      <path d="M12 1v2m0 18v2m11-11h-2M3 12H1m18.364-7.364-1.414 1.414M6.05 17.95l-1.414 1.414m0-12.728 1.414 1.414m12.728 12.728-1.414-1.414" />
    </svg>
  </span>
  <span class="theme-toggle__icon theme-toggle__icon--moon" aria-hidden="true">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-[21px] w-[21px]">
      <path d="M21 12.79A9 9 0 0 1 11.21 3 7 7 0 1 0 21 12.79Z" />
    </svg>
  </span>
</button>
<style is:inline>
  .theme-toggle {
    background: transparent;
    overflow: hidden;
    transition: border-color 0.4s ease, box-shadow 0.4s ease;
  }

  .theme-toggle__glow {
    position: absolute;
    inset: 0;
    border-radius: 1rem;
    background: radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.35), transparent 55%),
      radial-gradient(circle at 70% 80%, rgba(124, 58, 237, 0.25), transparent 60%);
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 0;
  }

  .theme-toggle__icon {
    position: absolute;
    inset: 0;
    display: grid;
    place-items: center;
    transition: opacity 0.4s ease, transform 0.4s ease;
    z-index: 1;
  }

  [data-theme-toggle][data-theme='dark'] .theme-toggle__icon--sun,
  [data-theme-toggle][data-theme='light'] .theme-toggle__icon--moon {
    opacity: 0;
    transform: scale(0.6) rotate(-20deg);
  }

  [data-theme-toggle][data-theme='light'] .theme-toggle__icon--sun,
  [data-theme-toggle][data-theme='dark'] .theme-toggle__icon--moon {
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }

  .theme-toggle:hover,
  .theme-toggle:focus-visible {
    border-color: var(--accent);
    box-shadow: 0 10px 25px rgba(79, 195, 247, 0.3);
  }

  .theme-toggle:hover .theme-toggle__glow,
  .theme-toggle:focus-visible .theme-toggle__glow {
    opacity: 1;
  }
</style>
<script is:inline>
  (() => {
    if (typeof window === 'undefined') return;
    if (window.__tpThemeToggleInitialized) return;
    window.__tpThemeToggleInitialized = true;

    const assignToggle = (btn) => {
      const syncButtons = (value) => {
        document
          .querySelectorAll('[data-theme-toggle]')
          .forEach((node) => node.setAttribute('data-theme', value));
      };

      const setTheme = (value) => {
        document.documentElement.dataset.theme = value;
        localStorage.setItem('tp-theme', value);
        syncButtons(value);
      };

      const getTheme = () => document.documentElement.dataset.theme || 'dark';
      syncButtons(getTheme());

      const handleToggle = () => {
        const next = getTheme() === 'dark' ? 'light' : 'dark';
        setTheme(next);
      };

      btn.addEventListener('click', handleToggle);
      btn.addEventListener('keydown', (event) => {
        if (event.key === 'Enter' || event.key === ' ') {
          event.preventDefault();
          handleToggle();
        }
      });
    };

    const init = () => {
      document
        .querySelectorAll('[data-theme-toggle]')
        .forEach((button) => {
          if (button instanceof HTMLButtonElement) {
            assignToggle(button);
          }
        });
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init, { once: true });
    } else {
      init();
    }
  })();
</script>
