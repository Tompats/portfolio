---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeader from '../components/SectionHeader.astro';
import ProjectFilter from '../components/ProjectFilter.astro';
import { projects } from '../content/data';
---
<BaseLayout title="Projects" description="Projects and experiments by Thomas Patsanis across web, mobile, and backend adventures.">
  <section>
    <SectionHeader title="Adventure Log" subtitle="Projects" />
    <p class="max-w-2xl text-base text-[var(--muted)]" data-animate>
      This is where I stash the builds from Jedi-level bug battles, alpine experiments, and client missions. Use the
      filters to zero in on stacks you care about.
    </p>
  </section>

  <section class="mt-12">
    <ProjectFilter projects={projects} />
  </section>
</BaseLayout>
