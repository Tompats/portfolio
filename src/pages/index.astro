---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeader from '../components/SectionHeader.astro';
import TagChip from '../components/TagChip.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { projects, techStack } from '../content/data';
import { withBase } from '../utils/url';

const featuredProjects = projects.filter((project) => project.featured).slice(0, 4);
---
<BaseLayout title="Home" description="Thomas Patsanis is a Full-Stack Developer blending Star Wars geekery with alpine calm to build ambitious products.">
  <section class="mx-auto flex flex-col items-center gap-12 lg:flex-row" data-animate>
    <div class="flex-1">
      <p class="text-xs uppercase tracking-[0.5em] text-[var(--muted)]">Hi there</p>
      <h1 class="mt-4 text-4xl font-semibold leading-tight text-[var(--text)] sm:text-5xl lg:text-6xl">
        Hi, I’m <span class="text-transparent bg-gradient-to-r from-aurora to-glacier bg-clip-text">Thomas Patsanis</span>
      </h1>
      <p class="mt-4 text-xl text-[var(--muted)]">
        Full-Stack Developer — Always Learning, Always Building.
      </p>
      <p class="mt-6 text-base text-[var(--muted)]">
        I traded my Jedi dreams for clean architectures, but I still keep a lightsaber near my keyboard. Whether
        I’m taming bugs worthy of Sith Lords or carving first lines on a silent alpine morning, I chase that same
        flow state.
      </p>
      <div class="mt-8 flex flex-wrap gap-4">
        <a class="btn-primary" href={withBase('/contact')}>Hire Me</a>
        <a class="btn-secondary" href={withBase('/projects')}>View Projects</a>
      </div>
      <div class="mt-8 flex items-center gap-6 text-sm text-[var(--muted)]">
        <span class="flex items-center gap-2"><span class="h-2 w-2 rounded-full bg-summit"></span> Remote / Ski Instructor</span>
        <span class="flex items-center gap-2"><span class="h-2 w-2 rounded-full bg-aurora"></span> Jedi ethos, mountain calm</span>
      </div>
    </div>
    <div class="relative flex-1">
      <div class="pointer-events-none absolute inset-0 -z-10">
        <div class="absolute inset-x-0 top-4 flex justify-center">
          <div class="h-64 w-full max-w-md rounded-[3rem] bg-gradient-to-b from-aurora/40 to-transparent blur-3xl"></div>
        </div>
        <div class="mountain-mask absolute inset-x-6 bottom-0 h-72 bg-gradient-to-t from-midnight/80 via-dusk/70 to-transparent">
          <div class="alpine-ridge absolute inset-x-0 bottom-0 h-1/2"></div>
        </div>
        <svg class="absolute -bottom-6 left-0 w-full animate-float" viewBox="0 0 600 200" fill="none">
          <path
            d="M0 120L80 80L140 140L220 60L300 150L380 90L450 150L520 110L600 140V200H0V120Z"
            fill="url(#gradient-mountain)"
            opacity="0.25"
          />
          <defs>
            <linearGradient id="gradient-mountain" x1="0" y1="0" x2="0" y2="1">
              <stop stop-color="#9fe3ff" stop-opacity="0.6" />
              <stop offset="1" stop-color="#050718" stop-opacity="0.1" />
            </linearGradient>
          </defs>
        </svg>
      </div>
      <div class="frosted-panel relative overflow-hidden border px-6 py-8">
        <div class="absolute inset-0 bg-gradient-to-br from-aurora/10 via-midnight/20 to-summit/10"></div>
        <div class="relative z-10">
          <p class="text-xs uppercase tracking-[0.5em] text-[var(--muted)]">Mission Log</p>
          <p class="mt-2 text-3xl font-semibold text-[var(--text)]">Battling bugs, chasing summits.</p>
          <p class="mt-4 text-sm text-[var(--muted)]">
            Currently architecting LifePulse, guiding Code Seed squads, and teaching skiers how to dance with
            gravity. My lightsaber is always charged.
          </p>
          <div class="mt-6 rounded-2xl border border-white/10 bg-black/30 p-4 text-sm font-mono">
            <p class="text-aurora">const mode = ['builder', 'ski instructor']</p>
            <p>const motto = "Focus. Flow. Repeat.";</p>
            <p>
              deploy(&#123; base: '/portfolio', target: 'GitHub Pages' &#125;);
            </p>
          </div>
        </div>
        <div class="absolute -bottom-10 -left-10 h-64 w-64 rounded-full bg-aurora/20 blur-3xl"></div>
        <div class="absolute -top-12 -right-16 h-56 w-56 rounded-full bg-summit/30 blur-3xl"></div>
      </div>
      <div class="pointer-events-none absolute inset-x-6 -bottom-10 h-48 rounded-[3rem] bg-gradient-to-t from-midnight/40 to-transparent"></div>
    </div>
  </section>

  <section class="mt-24" id="tech">
    <SectionHeader title="Tech That Keeps My Lightsaber Glowing" subtitle="Tech Stack" align="center" />
    <div class="frosted-panel grid gap-4 border p-6 md:grid-cols-2 lg:grid-cols-3" data-animate>
      {techStack.map((item) => (
        <TagChip label={item} variant="solid" />
      ))}
    </div>
  </section>

  <section class="mt-24" id="projects">
    <SectionHeader title="Featured Expeditions" subtitle="Projects" />
    <div class="grid gap-6 md:grid-cols-2">
      {featuredProjects.map((project, index) => (
        <ProjectCard {...project} delay={index * 120} />
      ))}
    </div>
  </section>

  <section class="mt-24" id="cta" data-animate>
    <div class="frosted-panel grid gap-6 border px-8 py-10 lg:grid-cols-2 lg:items-center">
      <div>
        <p class="text-xs uppercase tracking-[0.5em] text-[var(--muted)]">Let’s team up</p>
        <h3 class="mt-3 text-3xl font-semibold text-[var(--text)]">Need a playful Jedi dev who loves the alpine?</h3>
        <p class="mt-3 text-base text-[var(--muted)]">
          I help teams design, build, and ship resilient products—and I can swap stories about tree runs and code
          freezes along the way.
        </p>
      </div>
      <div class="flex flex-wrap gap-4">
        <a class="btn-primary" href="mailto:hello@tompats.dev">Contact</a>
        <a class="btn-secondary" href="https://github.com/tompats" target="_blank" rel="noreferrer">GitHub</a>
      </div>
    </div>
  </section>
</BaseLayout>
