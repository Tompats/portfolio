---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeader from '../components/SectionHeader.astro';
import TagChip from '../components/TagChip.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { projects, techStack } from '../content/data';
import { withBase } from '../utils/url';

const featuredProjects = projects.filter((project) => project.featured).slice(0, 2);
---
<BaseLayout title="Home" description="Thomas Patsanis is a Full-Stack Developer uniting Treasure Planet wonder, alpine calm, and Star Wars grit to build ambitious products.">
  <section class="mx-auto grid gap-12 lg:grid-cols-[1.05fr,0.95fr]">
    <div class="relative" data-animate>
      <div class="pointer-events-none absolute -right-6 -top-10 hidden h-40 w-40 text-etherium/50 sm:block" aria-hidden="true">
        <svg viewBox="0 0 200 200" class="h-full w-full animate-slow-spin motion-reduce:animate-none">
          <circle cx="100" cy="100" r="70" stroke="currentColor" stroke-width="0.8" fill="none" opacity="0.35" />
          <path d="M100 30 L115 100 L100 115 L85 100 Z" stroke="currentColor" stroke-width="0.6" fill="none" opacity="0.45" />
          <circle cx="100" cy="100" r="4" fill="currentColor" />
          <circle cx="150" cy="80" r="2" fill="currentColor" opacity="0.6" />
          <circle cx="60" cy="120" r="2.5" fill="currentColor" opacity="0.4" />
        </svg>
      </div>
      <p class="text-xs uppercase tracking-[0.55em] text-[var(--muted)]">Treasure Planet • Alpine Night</p>
      <h1 class="mt-4 text-4xl font-semibold leading-tight text-[var(--text)] sm:text-5xl lg:text-6xl">
        Mapping cosmic products while chasing alpine nights
      </h1>
      <p class="mt-5 text-lg text-[var(--muted)]">
        I’m Thomas Patsanis—full-stack explorer, ski instructor, and Star Wars kid forever. I mix Treasure Planet awe
        with mountain calm to guide teams through unknown galaxies of web, mobile, and data work.
      </p>
      <p class="mt-4 text-base text-[var(--muted)]">
        When I’m not shipping resilient systems, I’m carving dawn patrol lines and debugging with a lightsaber within
        reach. Exploring new worlds is the throughline whether the terrain is snow or TypeScript.
      </p>
      <div class="mt-7 flex flex-wrap gap-4">
        <a class="btn-primary" href={withBase('/contact')}>Hire Me</a>
        <a class="btn-secondary" href={withBase('/projects')}>View Projects</a>
      </div>
      <div class="mt-10 grid gap-4 sm:grid-cols-2">
        <div class="rounded-2xl border border-white/10 bg-surface/10 p-4">
          <p class="text-xs uppercase tracking-[0.4em] text-[var(--muted)]">Ski days logged</p>
          <p class="mt-2 text-3xl font-semibold text-[var(--text)]">45+</p>
          <p class="text-sm text-[var(--muted)]">Flow-state lessons this season.</p>
        </div>
        <div class="rounded-2xl border border-white/10 bg-surface/10 p-4">
          <p class="text-xs uppercase tracking-[0.4em] text-[var(--muted)]">Recent mission</p>
          <p class="mt-2 text-3xl font-semibold text-[var(--text)]">LifePulse</p>
          <p class="text-sm text-[var(--muted)]">Guiding health tech from prototype to launch.</p>
        </div>
      </div>
    </div>
    <div class="relative" data-animate data-delay="120">
      <div class="pointer-events-none absolute inset-0 -z-10 rounded-[40px] bg-gradient-to-br from-etherium/15 via-transparent to-nebula/20 blur-3xl"></div>
      <div class="frosted-panel relative overflow-hidden border border-white/10 px-6 py-8">
        <div class="absolute inset-0 opacity-60" aria-hidden="true">
          <div class="absolute -left-20 top-0 h-40 w-40 rounded-full bg-etherium/30 blur-[120px]"></div>
          <div class="absolute bottom-0 right-0 h-56 w-56 rounded-full bg-nebula/30 blur-3xl"></div>
        </div>
        <div class="relative z-10">
          <p class="text-xs uppercase tracking-[0.5em] text-[var(--muted)]">Mission Log</p>
          <p class="mt-2 text-3xl font-semibold text-[var(--text)]">Battling bugs, sketching star charts.</p>
          <p class="mt-4 text-sm text-[var(--muted)]">
            Currently steering LifePulse, mentoring Code Seed squads, and teaching riders how to dance with gravity.
            Lightsaber charged. Skis waxed.
          </p>
          <div class="mt-6 rounded-2xl border border-white/10 bg-black/30 p-4 text-sm font-mono tracking-wide text-[var(--muted)]">
            <p class="text-etherium">const motto = 'Explore • Build • Repeat';</p>
            <p>const basecamp = 'Thessaloniki, GR';</p>
            <p>deploy(&#123; target: 'GitHub Pages', project: 'portfolio' &#125;);</p>
          </div>
          <div class="mt-6 grid gap-4 sm:grid-cols-2">
            <div class="rounded-2xl border border-white/10 bg-surface/10 p-4">
              <p class="text-[11px] uppercase tracking-[0.5em] text-[var(--muted)]">Remote & slopes</p>
              <p class="mt-2 text-lg text-[var(--text)]">Split weeks between sprint planning and ski camps.</p>
            </div>
            <div class="rounded-2xl border border-white/10 bg-surface/10 p-4">
              <p class="text-[11px] uppercase tracking-[0.5em] text-[var(--muted)]">Galactic motto</p>
              <p class="mt-2 text-lg text-[var(--text)]">Bugs tougher than Sith? Bring it.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="mt-20" data-animate>
    <div class="relative overflow-hidden rounded-[32px] border border-white/10 bg-gradient-to-r from-[var(--surface)]/80 via-transparent to-[var(--card)] px-8 py-10">
      <div class="pointer-events-none absolute -right-10 top-1/2 hidden h-48 w-48 -translate-y-1/2 rounded-full bg-gradient-to-br from-etherium/40 to-nebula/40 blur-[120px] lg:block"></div>
      <div class="relative">
        <p class="text-[11px] uppercase tracking-[0.6em] text-[var(--muted)]">Treasure Planet mantra</p>
        <blockquote class="mt-4 text-2xl font-semibold leading-relaxed text-[var(--text)]">
          “Look at you! Glowing like a solar fire. You’re something special, Jim. You’re gonna rattle the stars, you are!”
        </blockquote>
        <p class="mt-4 text-sm uppercase tracking-[0.4em] text-[var(--muted)]">— John Silver</p>
      </div>
    </div>
  </section>

  <section class="mt-24" id="tech">
    <SectionHeader title="Systems powering my etherium sails" subtitle="Toolkit" align="center" />
    <div class="frosted-panel grid gap-4 border border-white/10 p-6 md:grid-cols-2 lg:grid-cols-3" data-animate>
      {techStack.map((item) => (
        <TagChip label={item} variant="solid" />
      ))}
    </div>
  </section>

  <section class="mt-24" id="projects">
    <SectionHeader title="Featured expeditions" subtitle="Projects" />
    <div class="grid gap-6 md:grid-cols-2">
      {featuredProjects.map((project, index) => (
        <ProjectCard {...project} delay={index * 120} />
      ))}
    </div>
  </section>

  <section class="mt-24" id="cta" data-animate>
    <div class="frosted-panel grid gap-6 border border-white/10 px-8 py-10 lg:grid-cols-2 lg:items-center">
      <div>
        <p class="text-xs uppercase tracking-[0.5em] text-[var(--muted)]">Set a new course</p>
        <h3 class="mt-3 text-3xl font-semibold text-[var(--text)]">
Need a mind built for exploration and precision?</h3>
        <p class="mt-3 text-base text-[var(--muted)]">
I work with teams to engineer resilient products, mentor developers, and deliver releases that stay on course even in uncharted space.
        </p>
      </div>
      <div class="flex flex-wrap gap-4">
        <a class="btn-primary" href="mailto:hello@tompats.dev">Contact</a>
        <a class="btn-secondary" href="https://github.com/tompats" target="_blank" rel="noreferrer">GitHub</a>
      </div>
    </div>
  </section>
</BaseLayout>
